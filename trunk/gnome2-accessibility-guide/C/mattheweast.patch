-<colspec colname="colspec0" colwidth="33*"/>
-<colspec colname="colspec1" colwidth="67*"/>
-<thead>
-<row rowsep="1">
-<entry valign="top">
-<para>Keys</para>
-</entry>
-<entry valign="top">
-<para>Function</para>
-</entry>
-</row>
-</thead>
-<tbody>
-<row>
-<entry valign="top">
-<para>
-<keycap>up arrow</keycap>
-</para>
-</entry>
-<entry valign="top">
